                android:scaleType="fitCenter"
                android:src="@mipmap/diasp_reshare_padded" />

            <TextView android:id="@+id/scrollpostnextgen_detailIndicsLikeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="11sp"
                android:textColor="#c3c3c3"
                android:textStyle="bold"
                android:text="2" />

        </LinearLayout>

        <LinearLayout android:id="@+id/scrollpostnextgen_detailIndicsCommentaire"
